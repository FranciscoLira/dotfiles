set $yellow              #f1fa8c
set $transparent         #00000000

# window colors
#                       border              background         text                 indicator
client.focused          $selection          $comment           $foreground          $purple
client.unfocused        $transparent        $transparent       $comment             $purple
client.focused_inactive $transparent        $transparent       $comment             $purple
client.urgent           $red                $red               $foreground          $purple

